<policies>
    <inbound>
        <base/>
        <choose>
            <when condition="@(!context.Variables.ContainsKey("productId"))">
                <return-response>
                    <set-status code="403" reason="Subscription key not related to any Product"/>
                </return-response>
            </when>
        </choose>
        <set-header name="X-Client-Ip" exists-action="override">
            <value>@(context.Request.IpAddress)</value>
        </set-header>
        <set-header exists-action="override" name="Authorization">
            <value>Bearer {{backend-access-token-pnpg}}</value>
        </set-header>
    </inbound>
    <backend>
        <base/>
    </backend>
    <outbound>
        <base/>
    </outbound>
    <on-error>
        <base/>
    </on-error>
</policies>
